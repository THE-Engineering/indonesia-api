{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "nodenext",
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "#server/common": [
        "./server/common/index"
      ],
      "#server": [
        "./server/index"
      ],
      "#config": [
        "./config/index"
      ],
      "#config/*": [
        "./config/*"
      ],
      "#ingest": [
        "./ingest/index"
      ],
      "#ingest/*": [
        "./ingest/*"
      ],
      "#utils/*": [
        "./utils/*"
      ]
    }
  },
  "include": [
    ".",
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    ".source",
    ".target",
    ".xlsx"
  ]
}
